<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragformat2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".QuestionFormat2">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/text2_view_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"

        android:text="Question"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/choice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2_view_selected"


        android:layout_marginTop="27dp"
        android:paddingVertical="10dp"
        android:text="choice 1" />


    <CheckBox
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice1"
        android:paddingVertical="10dp"
        android:text="choice 2" />

    <CheckBox
        android:id="@+id/choice3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice2"
        android:paddingVertical="10dp"
        android:text="choice 3" />

    <CheckBox
        android:id="@+id/choice4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice3"
        android:paddingVertical="10dp"
        android:text="choice 4" />

    <Button
        android:id="@+id/button_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Submit Answer" />

</RelativeLayout>